#!/usr/bin/env bash

# Backup current hosts
sudo cp /etc/hosts /etc/hosts.bak

# Remove any localhost lines and add the new one
grep -v 'localhost' /etc/hosts | sudo tee /etc/hosts.tmp > /dev/null
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts.tmp > /dev/null
sudo mv /etc/hosts.tmp /etc/hosts

# Add or replace facebook.com entry
grep -v 'facebook.com' /etc/hosts | sudo tee /etc/hosts.tmp > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts.tmp > /dev/null
sudo mv /etc/hosts.tmp /etc/hosts
