#!/usr/bin/env bash
# This script displays all active IPv4 addresses on the machine, including localhost

set -euo pipefail

# Use ifconfig to extract all IPv4 addresses
if command -v ifconfig >/dev/null 2>&1; then
    ifconfig | grep -oP '(?<=inet\s)\d+(\.\d+){3}'
else
    # fallback to ip command
    ip -4 -o addr show | awk '{split($4, a, "/"); print a[1]}'
fi
